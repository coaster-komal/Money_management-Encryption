

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/rush_grass_texture_214066"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusableInTouchMode="true"
    android:windowSoftInputMode="stateHidden"
    tools:context="lf.pocketnote.Daily_report">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_width="700dp"
            android:layout_height="200dp"
            android:background="@drawable/moneymgmt1"/>
    <Spinner
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="130dp"
        android:background="@color/lightblue"
        android:id="@+id/day" ></Spinner>
    <Spinner
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="300dp"
        android:background="@color/lightblue"
        android:id="@+id/month" ></Spinner>
    <Spinner
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="340dp"
        android:background="@color/lightblue"
        android:id="@+id/year" ></Spinner>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/viewtran"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="160dp"
        android:id="@+id/vt"/>
</RelativeLayout>
